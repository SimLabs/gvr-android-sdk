<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/streaming_setup_header"
        android:text="@string/setup_streaming"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:scaleType="center" />
    <CheckBox
        android:id="@+id/streaming_enabled"
        android:text="@string/enable_streaming"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/streaming_server_address"
        android:inputType="textUri"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:hint="@string/streaming_server_address_hint"/>
</LinearLayout>